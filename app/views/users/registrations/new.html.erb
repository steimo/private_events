<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <% if resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(resource.errors.count, "error") %> prohibited this form from being saved:</h2>
      <%= f.error_notification %>
    </div>
  <% end %>
  <div class="flex items-center justify-center min-h-screen">
    <div class="px-8 py-6 mx-4 mt-4 text-left bg-white shadow-xl md:w-1/3 lg:w-1/3 sm:w-1/3">
      <h3 class="text-2xl font-bold text-center">Sign Up</h3>
      <form action="">
        <div class="mt-4">
          <div>
            <%= f.input :name,
                required: true,
                label_html: {class: "block text-pink-500"},
                input_html: {class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600", type: "text", placeholder: "John Smith"},
                autofocus: true %>
          </div>
          <div class="mt-4">
            <%= f.input :email,
                required: true,
                label_html: {class: "block text-pink-500"},
                input_html: {class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600", type: "text", placeholder: "john@smith.com"},
                autofocus: true %>
          </div>
          <div class="mt-4">
                <%= f.input :password,
                required: true,
                label_html: {class: "block text-pink-500"},
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: {autocomplete: "new-password", class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600"} %>
              </div>
              <div class="mt-4">
                <%= f.input :password_confirmation,
                required: true,
                input_html: {autocomplete: "new-password", class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600"},
                label_html: {class: "block text-pink-500"} %>
              </div>
              <div class="form-actions">
                <div class="flex">
                  <%= f.button :submit, "Create Account", data: {turbo: false}, class: "w-full px-6 py-2 mt-4 text-white bg-orange-600 border border-solid border-orange-800 rounded hover:bg-orange-700 hover:text-white transition-colors duration-300" %>
                </div>
                <div class="mt-6 text-grey-dark">
                  Already have an account?
                  <div class="text-blue-600 hover:underline">
                    <%= render "users/shared/links" %>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
    <% end %>
