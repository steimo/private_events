<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <% if resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(resource.errors.count, "error") %> prohibited this form from being saved:</h2>
      <%= f.error_notification %>
    </div>
  <% end %>
  <div class="flex items-center justify-center min-h-screen">
    <div class="px-8 py-6 mx-4 mt-2 text-left bg-white shadow-xl md:w-1/3 lg:w-1/3 sm:w-1/3">
      <h3 class="text-2xl font-bold text-center">Edit Profile</h3>
      <form action="">
        <div class="mt-2">
          <div>
            <div class="form-inputs">
              <!--Avatar Upload Field-->
              <div class="form-group">
                <% if current_user.avatar.present? %>
                  <div class="flex justify-around items-center">
                    <%= image_tag @user.avatar, class: "rounded-full w-24 h-24 border border-gray-100 shadow-xl" %>
                    <div class="flex justify-center">
                      <div class="mb-3">
                        <%= f.file_field :avatar, class:"form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" %>
                        <span class="hint text-gray-500">New image will appear after saving changes</span>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
              <br>
              <!--Avatar Upload Field-->
              <%= f.input :email, required: true, autofocus: true,

                label_html: {class: "font-bold text-pink-500",},
                input_html: {class: "w-full px-4 py-2 my-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600", type: "text", placeholder: "John Smith"} %>
            </div>
            <%= f.input :name, required: true,  input_html: { class: "w-full px-4 py-2 my-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600"}, wrapper: false, label_html: { class: "label, font-bold text-pink-500" } %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
            <%= f.input :password,
                hint: "leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password", class: "w-full px-4 py-2 my-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" },
                label_html: {class:"font-bold text-pink-500"} %>
            <br>
            <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password", class: "w-full px-4 py-2 my-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" },
                label_html: {class: "font-bold text-pink-500"} %>
            <br>
            <%= f.input :current_password,
                hint: "we need your current password to confirm your changes",
                required: true,
                input_html: { autocomplete: "current-password", class: "w-full px-4 py-2 my-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" },
                label_html: {class:"font-bold text-pink-500"} %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Update", data: { turbo: "false" }, class: "w-full px-6 py-2 my-2 text-white bg-orange-600 border border-solid border-orange-800 rounded hover:bg-orange-700 hover:text-white transition-colors duration-300" %>
          </div>
        <% end %>
        <br>
        <p>Unhappy?</p>
        <div class="text-blue-600 hover:underline">
          <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
        </div>
      </form>
    </div>
  </div>
