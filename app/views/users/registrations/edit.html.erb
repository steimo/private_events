<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <% if resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(resource.errors.count, "error") %> prohibited this form from being saved:</h2>
      <%= f.error_notification %>
    </div>
  <% end %>
  <div class="flex items-center justify-center min-h-screen">
    <div class="px-8 py-6 mx-4 mt-4 text-left bg-white shadow-xl md:w-1/3 lg:w-1/3 sm:w-1/3">
      <h3 class="text-2xl font-bold text-center">Edit Profile</h3>
      <form action="">
        <div class="mt-4">
          <div>
            <div class="form-inputs">
              <%= f.input :email, required: true, autofocus: true,

                input_html: {class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600", type: "text", placeholder: "John Smith"} %>
            </div>
            <%= f.input :name, required: true,  input_html: { class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600"}, wrapper: false, label_html: { class: "label" } %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
            <%= f.input :password,
                hint: "leave it blank if you don't want to change it",
                required: false,
                input_html: { autocomplete: "new-password", class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" } %>
            <br>
            <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "new-password", class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" } %>
            <br>
            <%= f.input :current_password,
                hint: "we need your current password to confirm your changes",
                required: true,
                input_html: { autocomplete: "current-password", class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" } %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Update", data: { turbo: "false" }, class: "w-full px-6 py-2 mt-4 text-white bg-orange-600 border border-solid border-orange-800 rounded hover:bg-orange-700 hover:text-white transition-colors duration-300" %>
          </div>
        <% end %>
        <br>
        <p>Unhappy?</p>
        <div class="text-blue-600 hover:underline">
          <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
        </div>
      </form>
    </div>
  </div>
