<%= form_with(model: event) do |form| %>
  <div class="flex items-center justify-center min-h-screen">
    <div class="px-8 py-6 mx-4 mt-2 text-left bg-white shadow-xl md:w-1/3 lg:w-1/3 sm:w-1/3">
      <h3 class="text-2xl font-bold text-center"> <%= params[:action] == 'edit' ? "Edit Event" : "Create Event" %></h3>
      <% if event.errors.any? %>
        <div style="color: red">
          <div id="error_explanation">
            <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>
            <ul>
              <% event.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      <% end %>
      <form action="">
        <div class="mt-2">
          <!--Avatar Upload Field-->
          <%= form.label :image, style: "display: block", class: "text-pink-500 my-2" %>
          <%= form.file_field :image, class:"form-control block w-full px-3 py-1.5 text-base font-normal text-gray-700 text-gray-700 bg-white bg-clip-padding border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-blue-600 focus:outline-none" %>
          <!--Avatar Upload Field-->
          <%= form.label :title, style: "display: block", class: "text-pink-500 my-2" %>
          <%= form.text_field :title, class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600", type: "text", placeholder: "James Webb Space Telescope Launch" %>
        </div>
        <div>
          <%= form.label :description, style: "display: block", class: "text-pink-500 my-2" %>
          <%= form.text_area :description, class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600", type: "textarea" %>
        </div>
        <div>
          <%= form.label :location, style: "display: block", class: "text-pink-500 my-2" %>
          <%= form.text_field :location, class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600", placeholder: "Kourou, French Guiana" %>
        </div>
        <div>
          <%= form.label :start_time, style: "display: block", class: "text-pink-500 my-2" %>
          <%= form.datetime_field :start_time, class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" %>
        </div>
        <div>
          <%= form.label :end_time, style: "display: block", class: "text-pink-500 my-2" %>
          <%= form.datetime_field :end_time, class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" %>
        </div>
        <div>
          <%= form.submit params[:action] == 'edit' ? "Update Event" : "Create Event", class: "w-full px-6 py-2 mt-4 text-white bg-orange-600 border border-solid border-orange-800 rounded hover:bg-orange-700 hover:text-white transition-colors duration-300" %>
        </div>
      </div>
    </div>
  </div>
</form>
<% end %>
