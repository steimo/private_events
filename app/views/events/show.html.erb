<p style="color: green"><%= notice %></p>
<!-- <%= render @event %> -->
<section class="pb-32 text-gray-700">
  <div class="title text-center text-gray-500 p-8 text-3xl md:text-6xl ">
    <%= @event.title %>
  </div>
  <div class="flex justify-center flex-wrap">
    <div
          class="flex flex-col items-center p-8 bg-white shadow-lg rounded mx-8 mb-8 flex-1 mb-8 md:mb-0  md:w-1/3 sm:flex-initial">
      <% if @event.creator.avatar.present? %>
        <%= image_tag @event.creator.avatar, class: "rounded-full w-32 h-32 shadow-xl" %>
      <% end %>
      <h1 class="text-orange-600 text-4xl my-4  "> <%= @event.creator.name %></h1>
      <p class=" text-justify px-8 mb-12 my-8">
        <%= @event.description %>
      </p>
      <div class="flex justify-between ">
        <div class="pill bg-gray-300 rounded-full text-xs px-4 py-1 mr-2">
          <%= "##{@event.title.split.join("")}" %>
        </div>
      </div>
    </div>
    <div class="flex flex-col justify-between mx-4 md:mx-0 md:w-1/3 md:h-1/1">
      <div class="flex flex-col bg-white rounded p-4 items-left shadow-lg border-r-8 border-orange-400 border-opacity-50 mb-4 md:mb-auto">
        <h2 class="font-bold">Attendees <%= "(#{@event.attendees.count})" %></h2>
        <p class="p-4  text-gray-600">
          <% @event.attendees.each do |attendee| %>
            <%= render :partial => "events/attendee" %>
          <% end %>
        </p>
      </div>
      <div
            class="flex flex-col bg-white rounded p-4 items-center shadow-lg border-r-8 border-orange-400 border-opacity-50">
        <div class="flex justify-between">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <p class="p-4 text-gray-600">
          <%= @event.location %>
        </p>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <p class="p-2 text-gray-600">
          <%= "Start: #{@event.start_time}" %>
        </p>
        <p class="p-2 text-gray-600">
          <%= "End: #{@event.end_time}" %>
        </p>
      </div>
    </div>
  </div>
</section>
<div class="text-center">
  <button class="w-1/2 bg-transparent bg-gray-100 hover:bg-orange-500 text-orange-700 font-semibold hover:text-white py-2 px-4 border-2 border-orange-400 hover:border-transparent rounded">
    Attend event
</button>
</div>
<div>
  <%= link_to "Edit this event", edit_event_path(@event) %>
  <%= button_to "Destroy this event", @event, method: :delete %>
</div>
